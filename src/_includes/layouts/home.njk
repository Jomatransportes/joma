    <div class="[ intro__header ] [ radius frame ]"></div>
    <div class="[ intro__content ] [ flow ]">
      {% prismic_asHTML prismic.home.data.paragrafo, {class: 'intro__head'} %}
      <a
        class="button"
        href="https://api.whatsapp.com/send?phone=5561996241966&text=Texto%20aqui"
        target="_blank"
        rel="noopener noreferrer"
        data-variant="dark"
      >
        Fale conosco pelo whatsapp
      </a>
    </div>
    <div class="[ intro__media ] [ radius dot-shadow ]">
      <img class="[ intro__image ] [ radius ]" />
    </div>
  </article>

  <section class="[ main__about ] [ flow ]">
    <h2 class="text-700">Sobre n√≥s</h2>

    <div class="flow flow-space-300">{% prismic_asHTML prismic.home.data.sobre %}</div>
  </section>
  <section class="flow" id="contato">
    <h2 class="text-700">{% prismic_asText prismic.sobre.data.titulo %}</h2>

